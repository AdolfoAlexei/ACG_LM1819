<alumno idAlumno="a2">Alumno 2</alumno>
<alumno idAlumno="a3">Alumno 3</alumno>
<nota idNota="a1">8</nota>
<nota idNota="a2">7</nota>
<nota idNota="a3">5</nota>
</examen>