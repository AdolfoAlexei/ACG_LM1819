<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE examen [
  <!ELEMENT examen (grupo, fecha, tema, alumno+, nota*)>         <!--DTD que debe cumplirse-->
  <!ELEMENT grupo (#PCDATA)>
  <!ELEMENT fecha (#PCDATA)>
  <!ELEMENT tema (#PCDATA)>
  <!ELEMENT alumno (#PCDATA)>
  <!ELEMENT nota (#PCDATA)>

 <!ATTLIST alumno idAlumno ID #REQUIRED>
 <!ATTLIST nota idNota IDREFS #REQUIRED>
]>

